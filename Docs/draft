//input
var input = Core.ServiceLocator.Get<Input.InputSystem>();
var keyboard = input.GetDevice<Input.KeyboardDevice>();
if (keyboard.GetKeyDown(Keys.Space)) { /* jump */ }
//scene
// Save current scene
await RenyulEngine.Scenes.SceneManager.SaveToFileAsync(RenyulEngine.Scenes.SceneManager.Current!, "Scenes/level1.json");

// Load scene (async)
await RenyulEngine.Scenes.SceneManager.LoadFromFileAsync("Scenes/level1.json");

//ui
// scene.Update()
myLayout.Update();

// scene.Render(renderer)
myLayout.Draw(renderer, myFont);

//assetmanager
// assuming you have a GraphicsDeviceManager _gdm and Content set up in EngineGame
AssetManager.Init(Content, GraphicsDevice);
//acquire and release
var tex = AssetManager.AcquireTexture("textures/crate"); // content id
// use tex...
AssetManager.ReleaseTexture("textures/crate");
//async preload
await AssetManager.PreloadFromManifestAsync(myManifest);

//package
//export
var manifest = new PackageManifest {
    Name = "SmallTiles",
    Version = "0.1.0",
    Author = "You",
    Assets = new[]{ "textures/tiles/grass.png", "textures/tiles/dirt.png" },
    Assemblies = new[]{ "MyTileTools.dll" }
};
PackageExporter.Export(@"C:\Projects\MyContent", @"C:\Exports\smalltiles.renpkg", manifest);
//import 
var (manifest, assets, assemblies) = await PackageImporter.ImportAsync("C:\\Exports\\smalltiles.renpkg", "GameContent/Packages/SmallTiles", overwrite:true);
Console.WriteLine($"Imported package: {manifest.Name} - {manifest.Version}");

// Register assets with your AssetManager or move them into your game's Content folder as needed.
// Optionally load assemblies (be cautious):
var loaded = PackageImporter.LoadAssemblies(assemblies);

//audio
// change master volume
RenyulEngine.Audio.AudioSystem.MasterVolume = 0.8f;

// mute/unmute
RenyulEngine.Audio.AudioSystem.Muted = true;

// per-group control
var musicGroup = RenyulEngine.Audio.AudioSystem.GetOrCreateGroup("Music");
musicGroup.Volume = 0.5f;
musicGroup.Mute = false;

